<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table class="table table-borderless table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Data de nascimento</th>
      <th>Raça</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.date_of_birth&.to_date %></td>
        <td><%= pet.breed %></td>
        <td><%= pet.type_of_animal %></td>
        <td><%= link_to 'Prontuários', pet_medical_records_path(pet), class: "btn btn-primary" %></td>
        <td><%= link_to 'Editar', edit_pet_path(pet), class: "btn btn-warning"  %></td>
        <td><%= link_to 'Apagar', pet, method: :delete, data: { confirm: 'Você tem certeza?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="container text-center">
  <%= link_to 'Adicionar pet', new_pet_path, class: "btn btn-success" %>
</div>
<br>
<div class="container pagination justify-content-center" >
  <%= will_paginate @pets %>
</div>